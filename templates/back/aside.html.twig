<aside class="main-sidebar">
    {% block sidebar %}
        <section class="sidebar">
            {% block arborescence %}
                {{ menusBack()|raw }}
            {% endblock %}
            <div id="sidebar-logo">
                {% block sidebar_logo %}
                    <a class="logo" href="{{ path('tableauDeBord') }}">
                        <img src="{{ asset('assets/img/logoNinaBlanc.png') }}" alt="CMS Nina 3">
                    </a>
                    <a id="btn-toggle-regions" href="#" title="{{ 'Visualiser les régions'|trans }}"><i class="fas fa-layer-group"></i><span class="mls">{{ 'Visualiser les régions'|trans }}</span></a>
                {% endblock sidebar_logo %}
            </div>
        </section>
    {% endblock sidebar %}
</aside>

{# Barre d'édition #}
{% if ongletsEdition is defined and ongletsEdition %}
    <div id="ongletsEditionFront">
        {% if page is defined %}<p class="ongletsEditionFront-titrePage">{{ "Page :"|trans }} {{ page.titre }}</p>{% endif %}
        <ul>
            {% for onglet in ongletsEdition %}
                {% if onglet.label is defined and onglet.label is not empty and (onglet.css_class is not defined or onglet.css_class != 'traductions' or langues|length > 1) %}
                    <li{% if onglet.css_class == 'voirPage' %} class="active"{% endif %}><a {% if onglet.css_class != 'voirPage' %}href="{{ path('easyadmin', {entity: 'Page_Active', action: 'edit', id: page.id}) }}"{% endif %} data-onglet="{{ onglet.id }}">{{ onglet.label }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endif %}